@model Dashboard.Models.DeviceModel

@{
    ViewData["Title"] = "Control Device";
}

<h2>Edit Place</h2>

<form asp-action="EditPlaceView">
    
    <div class="form-group">
        <label asp-for="Name" class="control-label" readonly="readonly"></label>
        <input asp-for="Name" class="form-control" readonly="readonly" />
        <span asp-validation-for="Name" class="text-danger" readonly="readonly"></span>
    </div>
    
    <div class="form-group">
            <label asp-for="Control_Status_Bool">Enable Feature</label>
            <input asp-for="Control_Status_Bool" type="checkbox" class="form-control" />
            <span asp-validation-for="Control_Status_Bool" class="text-danger"></span>
        </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

